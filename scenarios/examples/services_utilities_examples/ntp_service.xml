<?xml version="1.0"?>

<scenario xmlns="http://www.github/gregtampa/HBCTF-Battlegrounds/scenario"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.github/gregtampa/HBCTF-Battlegrounds/scenario">

	<!-- an example remote storage system, with a remotely exploitable vulnerability that can then be escalated to root -->
	<system>
		<system_name>ntp_server</system_name>
		<base platform="linux"/>

		<service module_path="modules/services/unix/ntp/ntp"></service>

		<network type="private_network" range="dhcp"></network>
	</system>

</scenario>
