<?xml version="1.0"?>

<scenario xmlns="http://www.github/gregtampa/HBCTF-Battlegrounds/scenario"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.github/gregtampa/HBCTF-Battlegrounds/scenario">

	<system>
		<system_name>example_server</system_name>
		<base platform="linux"/>

		<!-- Generator which outputs 2 binary strings that are XORable together to get the flag. -->
		<vulnerability read_fact="strings_to_leak">
			<input into="strings_to_leak">
				<generator module_path=".*bitwise_xor">
					<input into="string_to_mask">
						<generator type="flag_generator"/>
					</input>
				</generator>
			</input>
		</vulnerability>

		<network type="private_network" range="dhcp"/>
	</system>

</scenario>
