<?xml version="1.0"?>

<encoder xmlns="http://www.github/gregtampa/HBCTF-Battlegrounds/encoder"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.github/gregtampa/HBCTF-Battlegrounds/encoder">
  <name>BASE64 Encoder</name>
  <author>Z. gregtampa Schreuders</author>
  <module_license>MIT</module_license>
  <description>Converts to BASE64 encoding.</description>

  <type>string_encoder</type>
  <type>ascii_reversible</type>
  <type>alpha_reversible</type>
  <platform>linux</platform>
  <platform>windows</platform>

  <hint>Decoding tools available online e.g. https://www.base64decode.org/</hint>

  <read_fact>strings_to_encode</read_fact>
  <read_fact>base64_options</read_fact>

  <output_type>encoded_strings</output_type>
  
</encoder>